PROGRAM HelloName(INPUT, OUTPUT);

USES
  DOS;

VAR
  QueryString, Name: STRING;
  NamePos: INTEGER;
BEGIN {HelloName}
  QueryString := GetEnv('QUERY_STRING');
  WRITELN('Content-Type: text/plain');
  WRITELN;
  NamePos := Pos('name=', QueryString); {ищем параметр 'name' в QUERY_STRING}
  IF NamePos > 0 THEN {'name' найден}
    Name := Copy(QueryString, NamePos + 5, Length(QueryString) - NamePos - 4)  {извлекаем значение после 'name='}
  ELSE {'name' не найден}
    Name := 'Anonymous';
  WRITELN('Hello dear, ', Name, '!')
END. {HelloName}
